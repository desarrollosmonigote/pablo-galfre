---
import Layout from '../layouts/Layout.astro';
// import home from '../assets/img/home.jpeg';
import home from '../assets/img/v2galfre.png';
import homelaptop from '../assets/img/herohomev2laptop.jpg';
import homemobile from '../assets/img/mobilegalfre.png';
import Biografia from '../components/main/Biografia.astro';
import Trayectoria from '../components/main/Trayectoria.astro';
import Libros from '../components/Libros.astro';
import Documentales from '../components/Documentales.astro';
import Articulos from '../components/Articulos.astro';
import Podcasts from '../components/main/Podcasts.astro';
---

<Layout title='Pablo GalfrÃ©'>
  <section
    class='hero'
    style={`background-image: url(${home.src});`}>
  </section>

  <section
    class='heroMobile'
    style={`background-image: url(${homemobile.src});`}>
  </section> 
  <Documentales />
  <Podcasts />
  <Libros />
  <Articulos />
  <Biografia />
  <Trayectoria />
</Layout>

<style>
  .hero {
    background-repeat: no-repeat;
    background-position: center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    min-height: 100vh;
    display: none;
    justify-content: flex-end;

  }


  .heroMobile{
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center ; 
    min-height: 100vh;
    display: flex;
    width: 100%;
  } 

  @media (min-width: 768px){
  .hero{
    display: flex;
  }
  .heroMobile{
    display: none;
  }
}

  .hero h2 {
    color: var(--cl-white);
    font-weight: 600;
    font-size: 4rem;
    align-self: center;
    margin-right: 1rem;
  }

  .img-bio {
    max-width: 300px;
  }
</style>

