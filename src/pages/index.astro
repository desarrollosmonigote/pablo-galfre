<style>
  .hero {
    background-repeat: no-repeat;
    background-position: center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    min-height: 100vh;
    display: flex;
    justify-content: flex-end;
  }
  
  .hero h2 {
    color: var(--cl-white);
    font-weight: 600;
    font-size: 4rem;
    align-self: center;
    margin-right: 1rem;
  }
  
  .img-bio {
