---
export interface Props {
  id: string;
  title: string;
  img: string;
  lanzamiento: string;
  descripcion: string;
}

const { id, title, descripcion, img } = Astro.props;
---

<div class="main-libros-wrapper">
  <a class="img-libros" href={`/${id}`}>
    <img
      src={img}
      alt={`Portada del libro ${title}`}
      style={`view-transition-name: book-${id}`}
    />
  </a>
</div>

<style>
  .main-libros-wrapper {
    display: flex;
    border-radius: 8px;
    background: #fff;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }

  img {
    border-radius: 4px;
  }
  .img-libros:hover {
    transform: scale(1.05);
    transition: all 0.3s ease
  }
</style>
