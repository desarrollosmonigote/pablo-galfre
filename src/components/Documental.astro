---
export interface Props {
  id: string;
  title: string;
  img: string;
  fecha: string;
  descripcion: string;
  rol:string;
  genero: string;
}

const { id, title, descripcion, img, rol, genero } = Astro.props;
---

<div class="main-docus-wrapper">
  <a class="img-docu" href={`/${id}`}>
    <img
      src={img}
      alt={`Portada del documental ${title}`}
      style={`view-transition-name: book-${id}`}
    />
  </a>
</div>

<style>
  .main-docus-wrapper {
    display: flex;
    height: 100%;
    border-radius: 8px;
    background: #fff;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }

  img {
    min-width: 139px;
    height: 100%;
    width: 100%;
    border-radius: 4px;
  }

  .img-docu{
    width: 100%;
  }

  .img-docu:hover {
    transform: scale(1.05);
    transition: all 0.3s ease
  }
</style>
