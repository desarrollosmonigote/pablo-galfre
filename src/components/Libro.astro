---
import libroLaComunidad from "../assets/img/libros/libro-la-comunidad.jpeg";
export interface Props {
  id: number
  title: string
  img: string
  fecha: string, 
  descripcion: string
}

const {
  id,
  title,
  fecha, 
  descripcion,
  img
} = Astro.props
---

<div class="main-libros-wrapper">
  <img src={img} alt="" />
  <div>
    <h3>{title}</h3>
    <span class="fecha">{fecha}</span>
    <p>
     {descripcion}
  </div>

  <style>
    .main-libros-wrapper {
      display: flex;
      border-radius: 8px;
      background: #fff;
      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }
    .main-libros-wrapper img {
      padding: 0.5rem;
    }
  </style>
</div>
