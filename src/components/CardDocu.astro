---
export interface Props {
  id: string;
  title: string;
  img: string;
  lanzamiento: string;
  descripcion: string;
  genero: string;
  rol: string;
  produccion: string;
}

const { id, title, lanzamiento, descripcion, genero, img, rol, produccion } =
  Astro.props;
---

<div class="card">
  <div class="card-wrapper">
    <img src={img} alt="" />
    <div>
      <div class="flex-title">
        <h3>{title}</h3>
        <p class="genero">{genero}</p>
      </div>
      <div class="flex-info">
       <div>
        <p><span>Producci√≥n: </span> {produccion}</p>
        <p><span>Lanzamiento: </span> {lanzamiento}</p>
       </div>
        <p><span>Rol: </span> {rol}</p>
      </div>
    </div>
  </div>
  <!-- <p class="text">{descripcion.slice(0, 170)}...</p> -->
  <p class="text">{descripcion}</p>
</div>

<style>
  .card {
    background: #fff;
    box-shadow: 0px 4px 4px 2px rgba(0, 0, 0, 0.25);
    margin-bottom: 1rem;
    border-radius: 8px;
    padding: 0.7rem;
  }

  .card-wrapper {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .card-wrapper > img {
    max-width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 7px;
  }

  .flex-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .flex-title h3 {
    font-weight: 700;
    color: var(--cl-dark-blue);
    font-size: 1.2rem;
  }

  .flex-info {
    display: flex;
    margin-top: .8rem;
  }

  .flex-info > * {
    width: 100%;
  }

  .flex-info span {
    color: var(--cl-dark-blue);
    font-weight: 700;
  }

  .genero {
    font-size: 14px;
    color: #fff;
    border-radius: 4px;
    background: #809bbf;
    padding: 2px 3px;
  }
</style>
