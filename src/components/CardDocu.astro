---
export interface Props {
  id: string;
  title: string;
  img: string;
  lanzamiento: string;
  descripcion: string;
  genero: string;
}

const { id, title, lanzamiento, descripcion, genero, img } = Astro.props;
---

<div class="card">
  <a href={`/${id}`}>
    <div class="card-wrapper">
      <img src={img} alt="" />
      <div>
        <h3>{title}</h3>
        <p>{genero}</p>
        <p>{lanzamiento}</p>
      </div>
    </div>
    <p class="text">{descripcion}</p>
  </a>
</div>

<style>
  .card {
    border-radius: 8px;
    background: #fff;
    box-shadow: 0px 4px 4px 2px rgba(0, 0, 0, 0.25);
    margin-bottom: 1rem;
  }

  .card-wrapper{
    display: flex;
  }
  .card img {
    max-height: 150px;
    object-fit: cover;
    border-radius: 10px;
  }
</style>
